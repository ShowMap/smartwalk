@using SmartWalk.Server.ViewModels
@model EntityVm
@{
    Style.Require("SmartWalk");

    Script.Require("jQueryUI").AtHead();
    
    var cancelAction = Model.Id == 0 ? Url.Action("List") : Url.Action("View", new { entityId = @Model.Id });    
}
@Html.Partial("EditTemplate", Model)
<script>
    $(function () {
        $("#edit-host-form").bind('OnHostCancelled', function (event) {
            window.location.href = "@cancelAction";
        });
        
        $("#edit-host-form").bind('OnHostSaved', function (event) {
            window.location.href = window.location.href = "/organizer/" + event.item.Id();
        });
    });
</script>